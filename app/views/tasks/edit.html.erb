<h1>タスク更新フォーム</h1>
<%= form_with model: @task, local: true do |form| %>
  <% @task.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  
<p>
  <%= form.label :タスク名 %><br>
  <%= form.text_field :title %>
</p>
<p>
  <%= form.label :タスクメモ %><br>
  <%= form.text_area :memo %>
</p>
<p>
  <%= form.label :状態 %>
  <%= form.select :integer, [["下書き(draft)", "0"], ["公開(published)", "1"], ["アーカイブ(archived)", "2" ]] %>
</p>


<%= form.submit :更新 %><br>
<% end %>

<p>
  <%= link_to '一覧', tasks_path %>
</p>
